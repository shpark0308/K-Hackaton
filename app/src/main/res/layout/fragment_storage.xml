<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="19.75dp"
        android:layout_marginTop="59dp">
        <TextView
            android:id="@+id/tv_stamp_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/storage_title_light"
            android:textSize="27.15dp"
            android:textColor="#272727"
            android:fontFamily="@font/apple_sd_gothic_neo_l"/>
        <TextView
            android:id="@+id/tv_stamp_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/storage_title_bold"
            android:textSize="27.15dp"
            android:textColor="#272727"
            android:fontFamily="@font/apple_sd_gothic_neo_b"/>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginTop="139dp"
        android:paddingStart="80dp"
        android:paddingEnd="80dp">
    </androidx.viewpager2.widget.ViewPager2>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/viewPager" >

        <TextView
            android:id="@+id/page"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="1"
            android:textSize="15sp"
            android:textColor="#FF5D21"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_picnum"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/page"
            android:gravity="left"
            android:text="/40"
            android:textSize="15sp"
            android:textColor="#272727"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>